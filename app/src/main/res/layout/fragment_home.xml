<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topimageexample" />

            <SearchView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </SearchView>

            <TextView
                android:id="@+id/highestRatingTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Highest Rating" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/highestRatingRv"
                android:layout_width="match_parent"
                android:layout_height="253dp"
                tools:listitem="@layout/highest_rating_layout">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/mostFollowedTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Follower " />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mostFollowedRv"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                tools:listitem="@layout/most_followed_manga_layout" />

            <TextView
                android:id="@+id/topAuthorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Author" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topAuthorRv"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                tools:listitem="@layout/top_author_layout" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>